{
  "name": "NameMC+",
  "description": "A browser extension that adds cool features to NameMC!",
  "version": "2.8",
  "author": "M6, Faav, and Orius",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "NameMC+",
    "default_popup": "html/popup.html"
  },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://*.namemc.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.bundle.min.js",
        "js/time.js",
        "js/icons.js"
      ],
      "css": [
        "css/removeAds.css",
        "css/followBtn.css",
        "css/fixDropdown.css",
	"css/skinContainer.css"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/*"
      ],
      "js": [
        "js/fixDropdown.js",
        "js/removeAds.js"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/search*",
        "https://*.namemc.com/name/*"
      ],
      "js": [
        "js/nameSearch.js"
      ],
      "css": [
        "css/blocked.css"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/profile/*"
      ],
      "js": [
        "js/profile.js",
        "js/skinview3d.bundle.js",
	      "js/customCapes.js"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/server/*"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["js/removeLocation.js"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/cape*",
        "https://*.namemc.com/nmcp-cape/*",
        "https://*.namemc.com/custom-cape/*",
        "https://*.namemc.com/optifine-cape/*"
      ],
      "run_at": "document_start",
      "js": [
        "js/skinview3d.bundle.js",
        "js/capesPage.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "json/*.json" ],
      "matches": [ "https://*.namemc.com/*" ]
    }
  ]
}
