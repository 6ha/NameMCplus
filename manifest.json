{
  "name": "NameMC+",
  "description": "Browser Extension that adds cool features to NameMC.com",
  "version": "1",
  "author": "M6 & Faav",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "NameMC+",
    "default_popup": "html/popup.html"
  },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://*.namemc.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.bundle.min.js",
        "js/fixDropdown.js"
      ],
      "css": [
        "css/removeAds.css"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/*"
      ],
      "js": [
        "js/fixDropdown.js"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/skin/*"
      ],
      "js": [
        "js/skin.js"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/search*"
      ],
      "js": [
        "js/nameSearch.js"
      ]
    },
    {
      "matches": [
        "https://*.namemc.com/profile/*"
      ],
      "js": [
        "js/profile.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ]
}
